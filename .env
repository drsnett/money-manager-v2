# Configuración de entorno para Money Manager
# Copiar este archivo como .env.local y configurar valores específicos

# Entorno de aplicación
APP_ENV=production
APP_DEBUG=false
APP_NAME="Money Manager"
APP_VERSION=2.0

# Base de datos
DB_TYPE=sqlite
DB_PATH=data/money_manager.db
# Para MySQL (descomentar si se usa)
# DB_HOST=localhost
# DB_NAME=money_manager
# DB_USER=root
# DB_PASS=

# Configuración de seguridad
SESSION_LIFETIME=7200
CSRF_TOKEN_LIFETIME=3600
PASSWORD_MIN_LENGTH=8

# Configuración de archivos
UPLOAD_MAX_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# Configuración de email (para futuras notificaciones)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@moneymanager.com
MAIL_FROM_NAME="Money Manager"

# Configuración de moneda
CURRENCY_SYMBOL=$
CURRENCY_CODE=USD
CURRENCY_DECIMALS=2

# Configuración de zona horaria
TIMEZONE=America/Santo_Domingo

# Configuración de logs
LOG_LEVEL=error
LOG_MAX_FILES=30

# Configuración de cache
CACHE_ENABLED=true
CACHE_LIFETIME=3600

# URLs externas
BACKUP_URL=
API_BASE_URL=

# Configuración de desarrollo (solo para entorno local)
DEV_TOOLBAR=false
DEV_PROFILER=false

# Configuración de WhatsApp
WHATSAPP_ENABLED=true
WHATSAPP_API_URL=https://api.callmebot.com/whatsapp.php
WHATSAPP_API_KEY=594246
WHATSAPP_PHONE=+18096747404